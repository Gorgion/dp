<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.2.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_2_0.dtd">

<!-- Definice v tomto XML musí odpovídat metodám v cz.muni.fi.dp.iface.util.FriendlyUrl -->
<routes>

    <route>
        <pattern>/new</pattern>
        <implicit-parameter name="page">addForm</implicit-parameter>
        <implicit-parameter name="p_p_lifecycle">0</implicit-parameter>
        <implicit-parameter name="p_p_state">normal</implicit-parameter>
        <implicit-parameter name="p_p_mode">view</implicit-parameter>
    </route>

    <route>
        <pattern>/edit/{entityId:\d+}</pattern>
        <implicit-parameter name="page">editForm</implicit-parameter>
        <implicit-parameter name="p_p_lifecycle">0</implicit-parameter>
        <implicit-parameter name="p_p_state">normal</implicit-parameter>
        <implicit-parameter name="p_p_mode">view</implicit-parameter>
    </route>

    <route>
        <pattern>/detail/{entityId:\d+}</pattern>
        <implicit-parameter name="page">detail</implicit-parameter>
        <implicit-parameter name="p_p_lifecycle">0</implicit-parameter>
        <implicit-parameter name="p_p_state">normal</implicit-parameter>
        <implicit-parameter name="p_p_mode">view</implicit-parameter>
    </route>

    <route>
        <pattern>/katalog</pattern>
    </route>

</routes>