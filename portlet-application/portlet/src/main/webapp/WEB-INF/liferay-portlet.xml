<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">
<liferay-portlet-app>
    <portlet>
        <portlet-name>DocumentListingPortlet</portlet-name>

        <configuration-action-class>cz.muni.fi.dp.web.portlet.documentlisting.ConfigurationActionImpl</configuration-action-class>
        <template-handler>cz.muni.fi.dp.web.portlet.documentlisting.template.DocumentListingPortletDisplayTemplateHandler</template-handler>
        <action-url-redirect>true</action-url-redirect>
        <instanceable>false</instanceable>
        <scopeable>false</scopeable>
        <requires-namespaced-parameters>false</requires-namespaced-parameters>
        
        <css-class-wrapper>dp-application portlet-DocumentListingPortlet</css-class-wrapper>
    </portlet>

    <portlet>
        <portlet-name>MessageListingPortlet</portlet-name>

        <configuration-action-class>cz.muni.fi.dp.web.portlet.messagelisting.ConfigurationActionImpl</configuration-action-class>
        <template-handler>cz.muni.fi.dp.web.portlet.messagelisting.template.MessageListingPortletDisplayTemplateHandler</template-handler>
        <action-url-redirect>true</action-url-redirect>
        <instanceable>false</instanceable>
        <scopeable>false</scopeable>
        <requires-namespaced-parameters>false</requires-namespaced-parameters>

        <header-portlet-css>/css/application.css</header-portlet-css>
        <css-class-wrapper>dp-application portlet-DocumentListingPortlet</css-class-wrapper>
    </portlet>

    <role-mapper>
        <role-name>administrator</role-name>
        <role-link>Administrator</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>guest</role-name>
        <role-link>Guest</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>power-user</role-name>
        <role-link>Power User</role-link>
    </role-mapper>
    <role-mapper>
        <role-name>user</role-name>
        <role-link>User</role-link>
    </role-mapper>
</liferay-portlet-app>