<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">
<liferay-portlet-app>
    <portlet>
        <portlet-name>DocumentListingPortlet</portlet-name>

        <friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
        <friendly-url-mapping>document</friendly-url-mapping>
        <friendly-url-routes>friendly-url/documentListing-url-routes.xml</friendly-url-routes>

        <action-url-redirect>true</action-url-redirect>
        <instanceable>false</instanceable>
        <scopeable>false</scopeable>
        <requires-namespaced-parameters>false</requires-namespaced-parameters>

        <header-portlet-css>/css/application.css</header-portlet-css>
        <header-portlet-css>/css/portlet-document.css</header-portlet-css>
        
        <header-portlet-javascript>/js/components/jquery-1.8.2.js</header-portlet-javascript>
        <header-portlet-javascript>/js/components/jquery-ui-1.9.1.custom.js</header-portlet-javascript>
        <header-portlet-javascript>/js/components/jquery.validate.js</header-portlet-javascript>
        <header-portlet-javascript>/js/global-init.js</header-portlet-javascript>
        <header-portlet-javascript>/js/portlets/common/portlet-reusable.js</header-portlet-javascript>
        <header-portlet-javascript>/js/portlets/document/components/init-form.js</header-portlet-javascript>
        <header-portlet-javascript>/js/portlets/document/init-view.js</header-portlet-javascript>
        
        <css-class-wrapper>dp-application portlet-DocumentListingPortlet</css-class-wrapper>
    </portlet>
</liferay-portlet-app>