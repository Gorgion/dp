<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cache="http://www.springframework.org/schema/cache"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
            http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache-4.0.xsd
            ">

    <!-- Ehcache library setup -->
    <cache:annotation-driven cache-manager="ibaCacheManager" key-generator="ibaKeyGenerator"/>
    <bean id="ibaKeyGenerator" class="org.springframework.cache.interceptor.SimpleKeyGenerator" /> <!-- je mozne vytvorit potomka a zahrnout Threadlocal promenne -->
    <bean id="ibaCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
        <property name="cacheManager" ref="ibaCacheManagerFactory"/>
    </bean>
    <bean id="ibaCacheManagerFactory" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation" value="classpath:core-ehcache.xml"/>
        <property name="cacheManagerName" value="IBAPACKAGE"/> <!-- Od verze 2.5 je nutné uvádět jméno, jinak se pobije s portálovým CacheManagerem -->
        <!--<property name="cacheManagerName" value="$${ibapackage.app.name}"/>--> <!-- Od verze 2.5 je nutné uvádět jméno, jinak se pobije s portálovým CacheManagerem -->
        <property name="shared" value="false"/> <!-- cache-manager beanu je mozne sdilet v ramci cele JVM! -->
    </bean>
</beans>